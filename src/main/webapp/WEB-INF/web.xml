<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>viewCountServlet</servlet-name>
        <servlet-class>servlet.count.ViewCountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewCountServlet</servlet-name>
        <url-pattern>/viewcount</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>viewCountFilter</filter-name>
        <filter-class>servlet.count.ViewCountFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>viewCountFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/404.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
</web-app>
